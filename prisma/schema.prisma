// ==============================
//  PRISMA SCHEMA FINAL POS KASIR
//  SUPPORT: SATUAN PRODUK, MULTIPLIER,
//           DISKON PRODUK, ORDER UNIT
// ==============================

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// ======================================================
// ========================= USER ========================
// ======================================================

model User {
  id               Int       @id @default(autoincrement())
  email            String    @unique
  username         String?   @unique
  password         String
  role             Role
  resetToken       String?
  resetTokenExpiry DateTime?
  name             String?
  picture          String?
  googleId         String?   @unique
  createdAt        DateTime  @default(now())

  otps             Otp[]
  orders           Order[]
}



// ======================================================
// ========================= OTP =========================
// ======================================================

model Otp {
  id         Int       @id @default(autoincrement())
  user       User?     @relation(fields: [userId], references: [id])
  userId     Int?
  email      String?
  codeHash   String
  expiresAt  DateTime
  used       Boolean   @default(false)
  attempts   Int       @default(0)
  createdAt  DateTime  @default(now())
}



// ======================================================
// ======================= PENDING USER ==================
// ======================================================

model PendingUser {
  id         Int       @id @default(autoincrement())
  email      String    @unique
  username   String?
  password   String
  role       Role
  otpHash    String
  expiresAt  DateTime
  createdAt  DateTime  @default(now())
}



// ======================================================
// ========================= PRODUCT =====================
// ======================================================

model Product {
  id          Int             @id @default(autoincrement())
  productCode String          @unique
  name        String
  price       Float           // harga default (bisa diabaikan jika pakai unit)
  costPrice   Float?
  stock       Int             @default(0)
  description String?
  barcode     String?         @unique
  image       Bytes?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  category    Category?       @relation(fields: [categoryId], references: [id])
  categoryId  Int?
  supplier    Supplier?       @relation(fields: [supplierId], references: [id])
  supplierId  Int?

  units       ProductUnit[]   // NEW (satuan produk)
  orderItems  OrderItem[]
}



// ======================================================
// ====================== PRODUCT UNIT ===================
// ======================================================
//  DUS, PACK, PCS, DLL
//  multiplier: isi per unit
//  price: harga per unit
// ======================================================

model ProductUnit {
  id          Int       @id @default(autoincrement())
  product     Product   @relation(fields: [productId], references: [id])
  productId   Int

  unitName    String               // contoh: Dus, Pack, Pcs
  multiplier  Int       @default(1)// contoh: 30, 6, 25
  price       Float                // harga per unit

  createdAt   DateTime  @default(now())

  orderItems  OrderItem[]          // NEW
}



// ======================================================
// ========================= CATEGORY ====================
// ======================================================

model Category {
  id          Int        @id @default(autoincrement())
  name        String
  description String?
  createdAt   DateTime   @default(now())

  products    Product[]
}



// ======================================================
// ========================= SUPPLIER ====================
// ======================================================

model Supplier {
  id          Int        @id @default(autoincrement())
  name        String
  address     String?
  phone       String?
  email       String?
  description String?
  createdAt   DateTime   @default(now())

  products    Product[]
}



// ======================================================
// ========================= ORDER =======================
// ======================================================

model Order {
  id              Int           @id @default(autoincrement())
  user            User          @relation(fields: [userId], references: [id])
  userId          Int

  subtotal        Float         @default(0)
  discountPercent Float         @default(0)
  taxPercent      Float         @default(0)
  discountValue   Float         @default(0)
  taxValue        Float         @default(0)
  total           Float

  status          OrderStatus
  paymentMethod   PaymentMethod?

  barcode         String?       @unique
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  items           OrderItem[]
}



// ======================================================
// ====================== ORDER ITEM =====================
// ======================================================
//  DI SINI MENENTUKAN SATUAN APA YANG DIBELI
// ======================================================

model OrderItem {
  id              Int          @id @default(autoincrement())
  order           Order        @relation(fields: [orderId], references: [id])
  orderId         Int

  product         Product      @relation(fields: [productId], references: [id])
  productId       Int

  unit            ProductUnit? @relation(fields: [unitId], references: [id])
  unitId          Int?         // NEW (Indomie Dus, Aqua Pack, dll)

  quantity        Int
  unitMultiplier  Int @default(1)
  unitPrice       Float

  discountPercent Float @default(0)
  discountValue   Float @default(0)

  subtotal        Float         // harga setelah diskon * qty
}



// ======================================================
// =========================== ENUMS =====================
// ======================================================

enum Role {
  KASIR
  ADMIN
  SUPERADMIN
  PELANGGAN
}

enum OrderStatus {
  PENDING
  PROCESSING
  COMPLETED
  CANCELLED
}

enum PaymentMethod {
  TUNAI
  DEBIT
  KREDIT
  QRIS
}
